{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "mg-chat-error-ux-schema",
    "title": "MG Chat Error UX Schema",
    "type": "object",
    "required": [
        "version",
        "agent",
        "platform",
        "principles",
        "error_intents"
    ],
    "properties": {
        "version": {
            "type": "string",
            "pattern": "^\\d+\\.\\d+$"
        },
        "agent": {
            "type": "string",
            "const": "MatrixGinChat"
        },
        "platform": {
            "type": "string",
            "const": "telegram"
        },
        "principles": {
            "type": "object",
            "required": [
                "no_shaming",
                "no_moralizing",
                "de_escalation_first",
                "always_offer_exit",
                "never_block_user"
            ],
            "properties": {
                "no_shaming": {
                    "type": "boolean",
                    "const": true
                },
                "no_moralizing": {
                    "type": "boolean",
                    "const": true
                },
                "de_escalation_first": {
                    "type": "boolean",
                    "const": true
                },
                "always_offer_exit": {
                    "type": "boolean",
                    "const": true
                },
                "never_block_user": {
                    "type": "boolean",
                    "const": true
                }
            }
        },
        "error_intents": {
            "type": "array",
            "minItems": 1,
            "items": {
                "type": "object",
                "required": [
                    "id",
                    "trigger",
                    "severity",
                    "response"
                ],
                "properties": {
                    "id": {
                        "type": "string",
                        "pattern": "^[a-z][a-z0-9_]*$"
                    },
                    "trigger": {
                        "type": "string",
                        "minLength": 1
                    },
                    "severity": {
                        "type": "string",
                        "enum": [
                            "low",
                            "medium",
                            "high",
                            "critical"
                        ]
                    },
                    "response": {
                        "type": "object",
                        "required": [
                            "text"
                        ],
                        "properties": {
                            "text": {
                                "type": "string",
                                "minLength": 1
                            },
                            "actions": {
                                "type": "array",
                                "items": {
                                    "type": "string",
                                    "pattern": "^[a-z][a-z0-9_]*$"
                                },
                                "minItems": 1
                            }
                        }
                    }
                }
            }
        }
    }
}